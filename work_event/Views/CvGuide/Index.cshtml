@{
    ViewData["Title"] = "Hướng Dẫn Viết CV";
    Layout = "~/Views/Shared/_Layout_work_event.cshtml";
}
<head>
    <link rel="stylesheet" href="~/css/companies.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <style>
        .cv-banner {
            background: linear-gradient(90deg,#2563eb 60%,#3498db 100%);
            color: #fff;
            border-radius: 18px;
            padding: 40px 30px 30px 30px;
            margin-bottom: 32px;
            box-shadow: 0 4px 24px rgba(44,62,80,0.10);
            text-align: center;
        }
        .cv-banner h1 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 12px;
        }
        .cv-banner p {
            font-size: 1.2rem;
            margin-bottom: 0;
        }
        .cv-section-title {
            color: #2563eb;
            font-size: 1.4rem;
            font-weight: 700;
            margin-bottom: 18px;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .cv-guide-card {
            border-radius: 16px;
            box-shadow: 0 2px 12px rgba(44,62,80,0.08);
            border: none;
            transition: box-shadow 0.22s, transform 0.18s;
        }
        .cv-guide-card:hover {
            box-shadow: 0 8px 32px rgba(44,62,80,0.18);
            transform: translateY(-4px) scale(1.02);
        }
        .cv-sample-img {
            height: 180px;
            object-fit: cover;
            border-radius: 12px 12px 0 0;
        }
        .btn-detail {
            margin-top: 10px;
        }
    </style>
</head>
<div class="container mt-4 pt-2 animate__animated animate__fadeIn">
    <div class="cv-banner mb-5">
        <h1><i class="fa fa-file-signature me-2"></i>Hướng Dẫn Viết CV Chuyên Nghiệp</h1>
        <p>Hỗ trợ sinh viên tạo CV ấn tượng, chuyên nghiệp để chinh phục nhà tuyển dụng.</p>
    </div>
    <div class="mb-5">
        <div class="cv-section-title"><i class="fa fa-lightbulb text-warning"></i>Bài viết hướng dẫn</div>
        <div class="row g-4">
            @if (ViewBag.Blogs != null)
            {
                foreach (var blog in ViewBag.Blogs)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card cv-guide-card h-100">
                            <img src="@blog.ImageUrl" class="card-img-top cv-sample-img" alt="@blog.Title">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title fw-bold">@blog.Title</h5>
                                <p class="card-text text-secondary">@blog.Content.Substring(0, Math.Min(blog.Content.Length, 100))...</p>
                                <a href="@Url.Action("ViewBlog", new { id = blog.Id })" class="btn btn-detail btn-primary mt-auto">Xem chi tiết</a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card cv-guide-card h-100">
                        <img src="https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=400&q=80" class="card-img-top cv-sample-img" alt="CV Guide">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold">Nội dung cần có trong CV</h5>
                            <p class="card-text text-secondary">Những mục quan trọng không thể thiếu trong một bản CV chuyên nghiệp...</p>
                            <a href="#" class="btn btn-detail btn-primary mt-auto">Xem chi tiết</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-4">
                    <div class="card cv-guide-card h-100">
                        <img src="https://images.unsplash.com/photo-1515378791036-0648a3ef77b2?auto=format&fit=crop&w=400&q=80" class="card-img-top cv-sample-img" alt="CV Layout">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold">Bố cục CV đơn giản</h5>
                            <p class="card-text text-secondary">Cách trình bày CV rõ ràng, dễ đọc, thu hút nhà tuyển dụng...</p>
                            <a href="#" class="btn btn-detail btn-primary mt-auto">Xem chi tiết</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-4">
                    <div class="card cv-guide-card h-100">
                        <img src="https://images.unsplash.com/photo-1461749280684-dccba630e2f6?auto=format&fit=crop&w=400&q=80" class="card-img-top cv-sample-img" alt="CV No Experience">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold">CV cho người chưa có kinh nghiệm</h5>
                            <p class="card-text text-secondary">Bí quyết tạo CV ấn tượng dù bạn chưa từng đi làm...</p>
                            <a href="#" class="btn btn-detail btn-primary mt-auto">Xem chi tiết</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="mb-5">
        <div class="cv-section-title"><i class="fa fa-file-alt text-success"></i>Mẫu CV tham khảo</div>
        <div class="row g-4">
            @if (ViewBag.Samples != null)
            {
                foreach (var sample in ViewBag.Samples)
                {
                    <div class="col-md-6 col-lg-3">
                        <div class="card cv-guide-card h-100">
                            <img src="@sample.ImageUrl" class="card-img-top cv-sample-img" alt="@sample.Title">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title fw-bold">@sample.Title</h5>
                                <p class="card-text text-secondary">@sample.Description</p>
                                <a href="@sample.FilePath" class="btn btn-detail btn-success mt-auto" target="_blank"><i class="fa fa-download me-1"></i>Tải xuống</a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-md-6 col-lg-3">
                    <div class="card cv-guide-card h-100">
                        <img src="https://images.unsplash.com/photo-1503676382389-4809596d5290?auto=format&fit=crop&w=400&q=80" class="card-img-top cv-sample-img" alt="CV IT">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold">CV IT</h5>
                            <p class="card-text text-secondary">Mẫu CV dành cho ngành Công nghệ thông tin, thiết kế hiện đại.</p>
                            <a href="#" class="btn btn-detail btn-success mt-auto" target="_blank"><i class="fa fa-download me-1"></i>Tải xuống</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="card cv-guide-card h-100">
                        <img src="https://images.unsplash.com/photo-1519125323398-675f0ddb6308?auto=format&fit=crop&w=400&q=80" class="card-img-top cv-sample-img" alt="CV Marketing">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold">CV Marketing</h5>
                            <p class="card-text text-secondary">Mẫu CV sáng tạo cho ngành Marketing, nhấn mạnh kỹ năng mềm.</p>
                            <a href="#" class="btn btn-detail btn-success mt-auto" target="_blank"><i class="fa fa-download me-1"></i>Tải xuống</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="card cv-guide-card h-100">
                        <img src="https://images.unsplash.com/photo-1515168833906-d2a3b82b302b?auto=format&fit=crop&w=400&q=80" class="card-img-top cv-sample-img" alt="CV Kế toán">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold">CV Kế toán</h5>
                            <p class="card-text text-secondary">CV cho ngành Kế toán, trình bày rõ ràng, chuyên nghiệp.</p>
                            <a href="#" class="btn btn-detail btn-success mt-auto" target="_blank"><i class="fa fa-download me-1"></i>Tải xuống</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="card cv-guide-card h-100">
                        <img src="https://images.unsplash.com/photo-1515378791036-0648a3ef77b2?auto=format&fit=crop&w=400&q=80" class="card-img-top cv-sample-img" alt="CV Sinh viên">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold">CV Sinh viên</h5>
                            <p class="card-text text-secondary">Mẫu CV đơn giản, phù hợp cho sinh viên mới ra trường.</p>
                            <a href="#" class="btn btn-detail btn-success mt-auto" target="_blank"><i class="fa fa-download me-1"></i>Tải xuống</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="my-5 text-center">
        <div class="p-4 rounded-4 bg-primary bg-gradient text-white d-inline-block shadow-sm">
            <h4 class="mb-3"><i class="fa fa-pen-nib me-2"></i>Công cụ tạo CV trực tuyến</h4>
            <a href="https://www.topcv.vn/" target="_blank" class="btn btn-light btn-lg fw-bold"><i class="fa fa-external-link-alt me-1"></i>Truy cập công cụ tạo CV</a>
        </div>
    </div>
    <div class="mb-5">
        <div class="cv-section-title"><i class="fa fa-video text-danger"></i>Video hướng dẫn viết CV</div>
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="ratio ratio-16x9 rounded-4 shadow-sm">
                    <iframe src="https://www.youtube.com/embed/ZujZhoGArwQ" title="Hướng dẫn viết CV" allowfullscreen></iframe>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
}  