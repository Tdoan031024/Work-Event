@{
    ViewData["Title"] = "Hướng Dẫn CV";
}
<head>
    <link rel="stylesheet" href="~/css/cv_guide.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<div class="container mt-5">
    <h1>Hướng Dẫn Viết CV</h1>
    <h3>Bài viết</h3>
    <div class="row">
        @foreach (var blog in ViewBag.Blogs)
        {
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@blog.Title</h5>
                        <p class="card-text">@blog.Content.Substring(0, Math.Min(blog.Content.Length, 100))...</p>
                        <a href="@Url.Action("ViewBlog", new { id = blog.Id })" class="btn btn-primary">Xem chi tiết</a>
                    </div>
                </div>
            </div>
        }
    </div>
    <h3>Mẫu CV</h3>
    <div class="row">
        @foreach (var sample in ViewBag.Samples)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@sample.Title</h5>
                        <a href="@sample.FilePath" class="btn btn-primary" target="_blank">Tải xuống</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
}