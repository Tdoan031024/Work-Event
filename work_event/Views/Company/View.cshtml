@model work_event.Models.DoanhNghiep
@{
    ViewData["Title"] = Model.TenCongTy;
    Layout = "~/Views/Shared/_Layout_work_event.cshtml";
}
<head>
    <link rel="stylesheet" href="css/view_company.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<div class="container mt-5 pt-3">
    <div class="company-detail">
        <div class="company-header">
            <div>
                @if (!string.IsNullOrEmpty(Model.Logo))
                {
                    <img src="images/companies_logo/@Model.Logo" alt="@Model.TenCongTy" class="company-logo" />
                }
                else
                {
                    <img src="~/assets/uploads/default_company.png" alt="Logo mặc định" class="company-logo" />
                }
            </div>
            <div class="company-title">
                <h1>@Model.TenCongTy</h1>
                <div>
                    <span class="industry">@(Model.LinhVuc?.TenLinhVuc)</span>
                    <span class="size">@Model.QuyMo</span>
                </div>
            </div>
        </div>
        <div class="company-info">
            <h3>Thông tin doanh nghiệp</h3>
            <div class="row">
                <div class="col-md-6">
                    <div class="info-item">
                        <i class="fa fa-map-marker"></i> <strong>Địa chỉ:</strong> @Model.DiaChi
                    </div>
                    <div class="info-item">
                        <i class="fa fa-phone"></i> <strong>Điện thoại:</strong> @Model.SoDienThoai
                    </div>
                    <div class="info-item">
                        <i class="fa fa-envelope"></i> <strong>Email:</strong> @Model.Email
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="info-item">
                        <i class="fa fa-globe"></i> <strong>Website:</strong>
                        <a href="@Model.Website" target="_blank">@Model.Website</a>
                    </div>
                    <div class="info-item">
                        <i class="fa fa-calendar"></i> <strong>Ngày tham gia:</strong> @Model.NgayTao.ToString("dd/MM/yyyy")
                    </div>
                </div>
            </div>
        </div>
        <div class="company-description">
            <h3 class="section-title">Giới thiệu</h3>
            <div class="description-content">
                @Html.Raw(Model.MoTa?.Replace("\n", "<br />"))
            </div>
        </div>
