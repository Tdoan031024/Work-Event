                    }
                </div>
            </div>
        } *@
        <div class="back-btn">
            <a href="@Url.Action("Index")" class="btn btn-secondary">
                <i class="fa fa-arrow-left"></i> Quay lại danh sách
            </a>
            <a href="@Url.Action("Contact", new { id = Model.Id })" class="btn btn-contact">
                <i class="fa fa-envelope"></i> Liên hệ ứng tuyển
            </a>
        </div>
    </div>
</div>