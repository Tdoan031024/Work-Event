@model work_event.Models.ViecLam
@{
    ViewData["Title"] = Model.TieuDe;
    Layout = "~/Views/Shared/_Layout_work_event.cshtml";
}
<head>
    <link rel="stylesheet" href="~/css/view_job.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<div class="container mt-5 pt-3">
    <h1>@Model.TieuDe</h1>
    <div class="job-detail">
        <div class="job-info">
            <h3>Thông tin công việc</h3>
            <div class="row">
                <div class="col-md-6">
                    <div class="info-item">
                        <i class="fa fa-map-marker"></i> <strong>Địa điểm:</strong> @Model.DiaDiem
                    </div>
                    <div class="info-item">
                        <i class="fa fa-money-bill"></i> <strong>Lương:</strong> @Model.Luong
                    </div>
                    <div class="info-item">
                        <i class="fa fa-calendar"></i> <strong>Hạn nộp:</strong> @Model.HanNop?.ToString("dd/MM/yyyy")
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="info-item">
                        <i class="fa fa-briefcase"></i> <strong>Chuyên ngành:</strong> @Model.ChuyenNganh
                    </div>
                    <div class="info-item">
                        <i class="fa fa-clock"></i> <strong>Kinh nghiệm:</strong> @Model.KinhNghiem
                    </div>
                    <div class="info-item">
                        <i class="fa fa-users"></i> <strong>Số lượng:</strong> @Model.SoLuong
                    </div>
                </div>
            </div>
        </div>
        <div class="job-description mt-4">
            <h3>Mô tả công việc</h3>
            <div class="description-content">
                @Html.Raw(Model.MoTa?.Replace("\n", "<br />"))
            </div>
        </div>
        <div class="job-requirements mt-4">
            <h3>Yêu cầu</h3>
            <div class="description-content">
                @Html.Raw(Model.YeuCau?.Replace("\n", "<br />"))
            </div>
        </div>
        <div class="back-btn mt-4">
            <a href="@Url.Action("View", new { id = Model.DoanhNghiepId })" class="btn btn-secondary">
                <i class="fa fa-arrow-left"></i> Quay lại doanh nghiệp
            </a>
            @if (ViewBag.UserRole == "sinh_vien")
            {
                <a href="@Url.Action("Contact", new { id = Model.DoanhNghiepId })" class="btn btn-primary">
                    <i class="fa fa-envelope"></i> Ứng tuyển
                </a>
            }
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
}